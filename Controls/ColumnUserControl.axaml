<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:controls="clr-namespace:kanban_project.Controls"
             x:Class="kanban_project.Controls.ColumnUserControl"
			 Padding="16" DragDrop.AllowDrop="True">
	<StackPanel Spacing="10">
		<TextBlock Text="{Binding Name}"/>
		<TextBlock Text="{Binding Cards.Count}" Margin="16,0,32,0"/>
		<ItemsControl Items="{Binding Cards}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel VerticalAlignment="Top" Spacing="10"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<controls:CardUserControl DataContext="{Binding}"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		
		<Button Content="Добавить карточку" Command="{Binding AddCard}"/>
	</StackPanel>
</UserControl>
