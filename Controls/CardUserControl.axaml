<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200"
             xmlns:vm="using:kanban_project.ViewModels"
             xmlns:mock="using:kanban_project.DesignMock"
             x:Class="kanban_project.Controls.CardUserControl"
             ClipToBounds="False"
			 Tapped="ShowDetailedCardDialog">

	<Design.DataContext>
		<mock:CardMock />
	</Design.DataContext>

	<Border Background="WhiteSmoke" CornerRadius="8" Padding="8" BoxShadow="0 1 1 0 DarkGray">
		<StackPanel>
			<TextBlock Classes="Title" Text="{Binding Name}" TextWrapping="Wrap" />
			<TextBlock Text="{Binding Description}" FontSize="12" FontWeight="SemiLight" TextTrimming="WordEllipsis" TextWrapping="WrapWithOverflow" MaxLines="2"/>
		</StackPanel>
	</Border>
</UserControl>
