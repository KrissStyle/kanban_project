<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200"
             xmlns:vm="using:kanban_project.ViewModels"
             xmlns:mock="using:kanban_project.DesignMock"
             x:Class="kanban_project.Controls.CardUserControl"
             ClipToBounds="False"
             Tapped="OnTapped">
    <Design.DataContext>
        <mock:CardMock />
    </Design.DataContext>
    <Border Classes="card" Background="{DynamicResource ThemeCardBrush}">
        <StackPanel Spacing="4">
            <TextBlock Classes="cardTitle"
                       Text="{Binding Name}"
                       TextWrapping="Wrap" />
            <TextBlock Classes="cardDescription"
                       Text="{Binding Description}"
                       TextTrimming="WordEllipsis"
                       TextWrapping="WrapWithOverflow"
                       MaxLines="2"
                       IsVisible="{Binding Description}" />
        </StackPanel>
    </Border>
</UserControl>
