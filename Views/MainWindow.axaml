<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:kanban_project.ViewModels"
        xmlns:mock="clr-namespace:kanban_project.DesignMock"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="350"
        xmlns:controls="clr-namespace:kanban_project.Controls"
        x:Class="kanban_project.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico" Title="Kanban Board" >

    <Design.DataContext>
        <mock:MainWindowMock />
    </Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml" />
		<StyleInclude Source="/CustomStyles.xaml" />
	</Window.Styles>
	
    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="Red">
            <TabControl Items="{Binding Boards}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Panel />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>

        <ScrollViewer Name="ColumnScrollViewer" Padding="30" Background="{DynamicResource ThemePrimary}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <Grid RowDefinitions="auto,30,*">
                <!--Заголовок и описание доски-->
                <StackPanel Spacing="6" Grid.Row="0" >
                    <TextBlock Classes="h1" Text="{Binding SelectedBoard.Name}" />
                    <TextBlock Classes="paragraph" Text="{Binding SelectedBoard.Description}" />
                </StackPanel>
                
                <!--Разделитель-->
                <Panel Grid.Row="1" />
                
                <!--Контейнер со столбцами и кнопкой-->
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <!--IsVisible чтобы не было бага с отображением контрола предметов и лишнего отступа-->
                    <ItemsControl Name="ItemControl"
								  Items="{Binding SelectedBoard.Columns}"
								  IsVisible="{Binding SelectedBoard.Columns.Count}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:ColumnUserControl DataContext="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Classes="addColumn" Content="Добавить столбец" VerticalAlignment="Top"
                                    IsVisible="{Binding SelectedBoard, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <Button.Flyout>
                            <Flyout Placement="Left">
                                <TextBox Watermark="Введите имя столбца" Name="AddColumnTextBox"/>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
