<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:kanban_project.ViewModels"
        xmlns:mock="using:kanban_project.DesignMock"
        mc:Ignorable="d" d:DesignWidth="300"
        x:Class="kanban_project.Views.Popups.DetailedCardPopUpWindow"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Name}"
        MaxWidth="500" Padding="30">

  <Design.DataContext>
    <mock:CardMock />
  </Design.DataContext>

  <StackPanel Spacing="10">
    <TextBox Classes="DetailedCardTitle" FontWeight="SemiBold" Text="{Binding Name}" TextWrapping="Wrap" />
    <Panel Classes="Divider" Background="DarkGray" Height="1" HorizontalAlignment="Stretch"/>
    <TextBox Text="{Binding Description}"
             FontSize="12"
             FontWeight="SemiLight"
             TextWrapping="Wrap"
             MaxWidth="440"
             AcceptsReturn="True"/>
  </StackPanel>
</Window>
